            <!--Recource TabView-->
        
            <Style x:Key="DefaultTabViewHeaderItem" TargetType="telerikPrimitives:TabViewHeaderItem">
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#fcfdff, Dark=#F8FAFA}" />
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#fcfdff, Dark=#4A4E52}" />
                <Setter Property="WidthRequest" Value="70" />
            </Style>

            <Style x:Key="DefaultTabViewHeaderItemSmall" TargetType="telerikPrimitives:TabViewHeaderItem">
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#fcfdff, Dark=#F8FAFA}" />
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#fcfdff, Dark=#4A4E52}" />
                <Setter Property="WidthRequest" Value="70" />
                <Setter Property="HeightRequest" Value="50" />
            </Style>

        
            <!--Recource BadgeView-->
            <Style x:Key="DefaultBadgeViewStyle" TargetType="telerikPrimitives:RadBadgeView">
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="WidthRequest" Value="70"/>
                <Setter Property="BadgeTextColor" Value="White" />
                <Setter Property="BadgeBackgroundColor" Value="Blue" />
                <Setter Property="BadgeOffsetX" Value="10" />
                <Setter Property="BadgeOffsetY" Value="-5" />
            </Style>
        
