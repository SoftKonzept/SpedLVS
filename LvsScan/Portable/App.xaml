            <!--Resource SlideView-->


            <!-- IndicatorTemplate -->
            <ControlTemplate x:Key="RadSlideView_IndicatorTemplate">
                
                <Label Text="{TemplateBinding IndicatorText}" 
                   FontSize="{TemplateBinding IndicatorFontSize}" 
                   FontFamily="{TemplateBinding IndicatorFontFamily}" 
                   VerticalOptions="Center" 
                   TextColor="{TemplateBinding IndicatorColor}"
                      
                       />
            </ControlTemplate>

            <!-- SelectedIndicator ControlTemplate -->
            <ControlTemplate x:Key="RadSlideView_SelectedIndicatorTemplate">
                <Label Text="{TemplateBinding SelectedIndicatorText}" 
                   FontSize="{TemplateBinding SelectedIndicatorFontSize}" 
                   FontFamily="{TemplateBinding SelectedIndicatorFontFamily}" 
                   VerticalOptions="Center" 
                   TextColor="{TemplateBinding SelectedIndicatorColor}" />
            </ControlTemplate>

            <!-- SlideView ControlTemplate -->
            <ControlTemplate x:Key="RadSlideView_ItemTemplate_Article">
                <StackLayout>
                    <telerikPrimitives:RadShadow BlurRadius="8" 
                                                Margin="10,10,10,10"                                                               
                                                Color="DarkBlue"
                                                Padding="0,0,0,0"
                                                HorizontalOptions="Fill"
                                                BackgroundColor="{TemplateBinding ViewBackgroundColor}">
                        <StackLayout Orientation="Vertical">

                            <Label  HorizontalOptions="StartAndExpand"
                                                Padding="5,-1,0,-2" 
                                                FontSize="Subtitle"
                                                FontAttributes="Bold"
                                                TextColor="DarkSlateGray"
                                                Text="{TemplateBinding Id}" />
                            <Label  HorizontalOptions="StartAndExpand"
                                                Padding="5,-2,0,-2" 
                                                FontSize="Subtitle"
                                                FontAttributes="Bold"
                                                TextColor="DarkSlateGray"
                                                Text="{TemplateBinding Title}" />
                            <Label  HorizontalOptions="StartAndExpand"
                                                Padding="5,-2,0,-2" 
                                                FontSize="Subtitle"
                                                FontAttributes="Bold"
                                                TextColor="DarkSlateGray"
                                                Text="{TemplateBinding SubText}"                                                    
                                                />
                            <BoxView Color= "DarkSlateBlue"                             
                                     HeightRequest="1"                                                
                                     HorizontalOptions="Fill" />

                            <StackLayout Orientation="Vertical">

                                <StackLayout x:Name="slProduktionsnummer" Orientation="Horizontal" Padding="0,-4,0,-1">
                                    <Label  HorizontalOptions="Start"
                                                        Padding="15,0,0,0"
                                                        FontSize="Small"
                                                        TextColor="DimGray"
                                                        FontAttributes="Bold"
                                                        Text="Produktions-Nr:"
                                                        WidthRequest="140"/>
                                    <Label  HorizontalOptions="Start"
                                                        FontSize="Small"
                                                        TextColor="DimGray"
                                                        Text="98765432" />
                                </StackLayout>

                                <StackLayout x:Name="slWerksnummer" Orientation="Horizontal" Padding="0,-5,0,-1">
                                    <Label  HorizontalOptions="Start"
                                                        Padding="15,0,0,0"
                                                        FontSize="Small"
                                                        TextColor="DimGray"
                                                        FontAttributes="Bold"
                                                        Text="Werksnummer:"
                                                        WidthRequest="140"/>
                                    <Label  HorizontalOptions="Start"
                                                        FontSize="Small"
                                                        TextColor="DimGray"
                                                        Text="QWE 123 456 789" />
                                </StackLayout>

                                <StackLayout x:Name="slBrutto" Orientation="Horizontal" Padding="0,-5,0,1">
                                    <Label  HorizontalOptions="Start"
                                                        Padding="15,0,0,0"
                                                        FontSize="Small"
                                                        TextColor="DimGray"
                                                        FontAttributes="Bold"
                                                        Text="Gewicht [kg]:"
                                                        WidthRequest="140"/>
                                    <Label  HorizontalOptions="Start"
                                                        FontSize="Small"
                                                        TextColor="DimGray"
                                                        Text="23.345,11"/>
                                </StackLayout>
                            </StackLayout>

                        </StackLayout>
                    </telerikPrimitives:RadShadow>
                </StackLayout>
            </ControlTemplate>
            
            
