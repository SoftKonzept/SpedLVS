                                                                                Margin="10,10,10,10" 
                                                                                Padding="0,5,0,0"
                                                                                Color="DarkBlue"
                                                                                BackgroundColor="PaleGreen">
                                                        <StackLayout>
                                                            <StackLayout>
                                                                <StackLayout Orientation="Horizontal">
                                                                    <StackLayout>
                                                                        <Label  HorizontalOptions="StartAndExpand"
                                                                                    Padding="5,0,0,0" 
                                                                                    FontSize="Subtitle"
                                                                                    FontAttributes="Bold"
                                                                                    TextColor="DarkSlateGray"
                                                                                    >
                                                                            <Label.Text>
                                                                                <MultiBinding StringFormat="{}LVS: {0} - [ {1} ]">
                                                                                    <Binding Path="LVS_ID" />
                                                                                    <Binding Path="Id" />
