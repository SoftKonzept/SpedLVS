                                                                        Padding="15,0,0,0"
                                                                        FontSize="Small"
                                                                        TextColor="DimGray"
                                                                        >
                                                                    <Label.Text>
                                                                        <MultiBinding StringFormat="{}Prod-Nr.: {0}">
                                                                            <Binding Path="Produktionsnummer" />
                                                                        </MultiBinding>
                                                                    </Label.Text>
                                                                </Label>
                                                                <Label  HorizontalOptions="StartAndExpand"
                                                                        Padding="15,0,0,0"
                                                                        FontSize="Small"
                                                                        TextColor="DimGray">
                                                                    <Label.Text>
                                                                        <MultiBinding StringFormat="{}Werks-Nr: {0}">
                                                                            <Binding Path="Werksnummer" />
                                                                        </MultiBinding>
                                                                    </Label.Text>
                                                                </Label>
                                                                <Label  HorizontalOptions="StartAndExpand"
                                                                        Padding="15,0,0,0"
                                                                        FontSize="Small"
                                                                        TextColor="DimGray">
                                                                    <Label.Text>
                                                                        <MultiBinding StringFormat="{}Brutto KG: {0:N2}">
